<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="fr.marvinlabs.samples.authorization"
	android:versionCode="1"
	android:versionName="1.0.0"
>
	<!-- We require this permission in order to access the authorization provider. If you comment this line, a SecurityException 
		will be raised and features will not be unlocked. This permission also requires than this application is signed with the 
		same key as the authorization application. -->
	<uses-permission
		android:name="fr.marvinlabs.samples.authorization.AUTHORIZATION_PROVIDER" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:debuggable="true"
	>
		<activity
			android:name="fr.marvinlabs.samples.authorization.MainActivity"
			android:label="@string/app_name"
		>
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
</manifest>